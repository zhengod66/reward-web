// Prisma schema for the reward system
// Uses Vercel Postgres via DATABASE_URL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Parent {
  id        String   @id @default(cuid())
  phone     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  children  Child[]
  tasks     Task[]
  sessions  Session[]
  otps      OtpRequest[]
}

model Child {
  id        String   @id @default(cuid())
  parent    Parent   @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId  String
  name      String
  age       Int?
  avatarUrl String?
  colorTag  String? // pastel color per child
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  tasks     Task[]
  stars     StarLog[]
  achievements Achievement[]
}

model TaskTemplate {
  id          String   @id @default(cuid())
  parent      Parent?  @relation(fields: [parentId], references: [id])
  parentId    String?
  title       String
  description String?
  defaultStars Int     @default(1)
  category    String?
  recommendedMinAge Int?
  recommendedMaxAge Int?
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
}

model Task {
  id          String   @id @default(cuid())
  parent      Parent   @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId    String
  child       Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId     String
  template    TaskTemplate? @relation(fields: [templateId], references: [id])
  templateId  String?
  title       String
  description String?
  stars       Int      @default(1)
  active      Boolean  @default(true)
  schedule    String?  // e.g. daily, weekdays, custom
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  logs        StarLog[]
}

model StarLog {
  id         String   @id @default(cuid())
  child      Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId    String
  task       Task?    @relation(fields: [taskId], references: [id])
  taskId     String?
  date       DateTime // store in UTC; treat as local day on client
  stars      Int      @default(1)
  note       String?
  isBonus    Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model Achievement {
  id          String   @id @default(cuid())
  child       Child    @relation(fields: [childId], references: [id], onDelete: Cascade)
  childId     String
  title       String
  kind        String   @default("custom")
  description String?
  threshold   Int
  unlockedAt  DateTime @default(now())

  @@index([childId, kind])
}

model OtpRequest {
  id        String   @id @default(cuid())
  parent    Parent?  @relation(fields: [parentId], references: [id])
  parentId  String?
  phone     String
  codeHash  String
  expiresAt DateTime
  createdAt DateTime @default(now())
  used      Boolean  @default(false)
  attempts  Int      @default(0)

  @@index([phone])
  @@index([expiresAt])
}

model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  parent    Parent   @relation(fields: [parentId], references: [id], onDelete: Cascade)
  parentId  String
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([token])
  @@index([expiresAt])
}
